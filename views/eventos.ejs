<%- include('./layouts/index'); %>

<body class="home">
<%- include('./layouts/header'); %>
<h1 class="titulospags">Eventos Disponibles</h1>
<br>
<div class="row listado-grupos">
    <% if (mercados && mercados.length>0){ mercados.forEach(mercado => { if(mercado.capacidad>0){ %>
        <div class="col-6 col-md-4 col-lg-3 mb-4">
            <div class="card shadow-lg border-light infodiv">
                <div class="card-body">
                    <blockquote class="blockquote">
                        <h4>
                            <%= mercado.nombre %>
                        </h4>
                        <img src="<%= mercado.imagen %>" class="d-block w-100" alt="Imagen 3">
                    </blockquote>
                    <a class="btn btn-success" href="/info-evento/<%= mercado.id %>">Info</a>
                </div>
            </div>
        </div>
    <% }}); } else { %>
        <div class="col-6 col-md-4 col-lg-3 mb-4">
            <div class="card shadow-lg border-light infodiv">
                <div class="card-body">
                    <blockquote class="blockquote">
                        <p>No hay eventos disponibles</p>
                    </blockquote>
                </div>
            </div>
        </div>
        <% }%>
        <div class="container text-center">
            <div class="row">
                <p><%= page %>/<%= max %></p>
                <% if(mercados && mercados.length > 0) {
                if(prev)
                { %>
                    <div class="col">
                        <a class="btn btn-success" href="/eventosDisp/<%= prev %>">Previo</a>
                    </div>
                <%}if(sig && page<max){%>
                    <div class="col">
                        <a class="btn btn-success" href="/eventosDisp/<%= sig %>">Siguiente</a>
                    </div>
                <%}}%>
            </div>
        </div>

</div>
<%- include('./layouts/footer'); %>
</body>