<%- include('./layouts/index'); %>

<body class="home">
<%- include('./layouts/header'); %>

<div class="container mt-5">
    <h1 class="titulospags">Subir nueva artesanía</h1>

    <form action="/subeFoto" method="post" enctype="multipart/form-data" class="infodiv mt-4">
        <div class="mb-3">
            <label for="titulo" class="form-label">Título de la artesanía</label>
            <input type="text" name="titulo" id="titulo" class="form-control input-login" required />
        </div>

        <div class="mb-3">
            <label for="descripcion" class="form-label">Descripción</label>
            <textarea name="descripcion" id="descripcion" rows="4" class="form-control input-login" required></textarea>
        </div>

        <div class="mb-3">
            <label for="tipo" class="form-label">Tipo de artesanía</label>
            <input type="text" name="tipo" id="tipo" class="form-control input-login" required />
        </div>

        <div class="mb-3">
            <label for="imagen" class="form-label">Imagen de la artesanía</label>
            <input type="file" name="imagen" id="imagen" accept="image/*" class="form-control input-login" required />
        </div>

        <button type="submit" class="btn btn-success">Subir</button>
    </form>
</div>

<%- include('./layouts/footer'); %>
</body>