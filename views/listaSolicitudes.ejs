<%- include('./layouts/index'); %>

<body class="home">
<%- include('./layouts/header'); %>
<h1 class="titulospags">Solicitudes a eventos</h1>

<div class="container mt-4 contenido-principal infodiv">
    <table class="table infodiv">
        <thead>
        <tr>
            <th scope="col">Evento</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        <% if(solicitudes && solicitudes.length > 0){
        solicitudes.forEach(solicitud => {%>
            <tr>
                <td><a class="enlacetabla" href="/info-evento/<%= solicitud.mercado %>"><%= solicitud.nombremercado %></a></td>
                <td><a href="/apuntarse/<%= solicitud.mercado %>" class="btn-aceptar" data-id="<%= solicitud.id %>">Aceptar</a></td>
                <td><a href="/solicitud_aceptar/<%= solicitud.id %>/0" class="btn-rechazar">Rechazar</a></td>
            </tr>
        <% });} else { %>
            <tr>
                <td>Ahora mismo no hay solicitudes</td>
            </tr>
        <% } %>
        </tbody>
    </table>
    <div class="row">
        <p><%= page %>/<%= max %></p>
        <% if(solicitudes && solicitudes.length > 0) {
        if(prev)
        { %>
            <div class="col">
                <a class="btn btn-success" href="/listaSolicitudes/<%= prev %>">Previo</a>
            </div>
        <%}if(sig && page<max){%>
            <div class="col">
                <a class="btn btn-success" href="/listaSolicitudes/<%= sig %>">Siguiente</a>
            </div>
        <%}}%>
    </div>
</div>
</div>


<%- include('./layouts/footer'); %>
<script src="/scripts/listaSolicitud.js"></script>
</body>